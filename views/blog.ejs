<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blogify</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" alt="" width="50%">
            <pre class="mt-3"><%= blog.body %></pre>
        </div>
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="70px">
            <%= blog.createdBy.fullName %>
        </div>

        <div class="container mt-4">
            <h1>Comments (<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" class="form-control" id="comment" name="content"
                            placeholder="Enter your comment">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            <% } %>

            <div class="container mt-3">
                <% comments.forEach(comment => { %>
                    <div class="container mt-4">
                        <img src="<%= comment.createdBy.profileImageURL %>" alt="" width="70px">
                        <%= comment.createdBy.fullName %>
                        <pre><%= comment.content %></pre>
                    </div>
                <% }) %>
            </div>
        </div>

        <%- include('./partials/scripts') %>
</body>

</html>